    <!-- Cyberpunk Theme Override -->
    <style>
        /* Simple cyberpunk theme overrides */
        * {
            box-sizing: border-box !important;
        }
        
        html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
            height: auto !important;
            overflow-x: hidden !important;
            background-color: #000000 !important;
            color: #e0e0e0 !important;
            cursor: none !important;
        }
        
        /* Cyberpunk Glitch Effect */
        .glitch {
            position: relative;
        }
        .glitch::before, .glitch::after {
            content: attr(data-text);
            position: absolute;
            left: 0;
        }
        .glitch::before {
            text-shadow: -2px 0 magenta;
            clip: rect(0, 900px, 0, 0);
            animation: glitch 2s infinite linear alternate-reverse;
        }
        .glitch::after {
            text-shadow: -2px 0 cyan;
            clip: rect(0, 900px, 0, 0);
            animation: glitch 2s infinite linear alternate-reverse;
        }
        @keyframes glitch {
            0% { clip: rect(42px, 9999px, 44px, 0); }
            20% { clip: rect(12px, 9999px, 14px, 0); }
            40% { clip: rect(82px, 9999px, 84px, 0); }
            60% { clip: rect(32px, 9999px, 34px, 0); }
            80% { clip: rect(62px, 9999px, 64px, 0); }
            100% { clip: rect(22px, 9999px, 24px, 0); }
        }
        
        /* Custom Cyberpunk Cursor */
        #cyber-cursor {
            pointer-events: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 20px;
            height: 20px;
            border: 2px solid #ff0000;
            border-radius: 50%;
            background: rgba(255, 0, 0, 0.1);
            box-shadow: 
                0 0 10px #ff0000,
                0 0 20px #ff0000,
                0 0 30px #ff0000,
                inset 0 0 10px rgba(255, 0, 0, 0.3);
            transform: translate(-50%, -50%);
            z-index: 9999;
            transition: all 0.15s ease;
            animation: pulse-cursor 2s infinite;
        }
        
        #cyber-cursor::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 4px;
            height: 4px;
            background: #ff0000;
            border-radius: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 0 8px #ff0000;
        }
        
        #cyber-cursor.hover {
            width: 40px;
            height: 40px;
            border-color: #00ffff;
            background: rgba(0, 255, 255, 0.15);
            box-shadow: 
                0 0 15px #00ffff,
                0 0 30px #00ffff,
                0 0 45px #00ffff,
                inset 0 0 15px rgba(0, 255, 255, 0.3);
        }
        
        #cyber-cursor.hover::before {
            background: #00ffff;
            box-shadow: 0 0 12px #00ffff;
        }
        
        @keyframes pulse-cursor {
            0%, 100% {
                box-shadow: 
                    0 0 10px #ff0000,
                    0 0 20px #ff0000,
                    0 0 30px #ff0000,
                    inset 0 0 10px rgba(255, 0, 0, 0.3);
            }
            50% {
                box-shadow: 
                    0 0 15px #ff0000,
                    0 0 30px #ff0000,
                    0 0 45px #ff0000,
                    inset 0 0 15px rgba(255, 0, 0, 0.5);
            }
        }
        
        /* Enhanced Spotlight Effect */
        .cyber-spotlight {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle 100px at var(--x, 0px) var(--y, 0px), rgba(255,0,0,0.08), transparent 70%),
                radial-gradient(circle 200px at var(--x, 0px) var(--y, 0px), rgba(0,255,255,0.05), transparent 80%);
            pointer-events: none;
            z-index: 1;
