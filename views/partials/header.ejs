<header id="header" class="fixed top-0 w-full bg-cyber-dark/90 backdrop-blur-md border-b border-cyber-red z-50 transition-all duration-300">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="/" class="text-xl font-bold text-cyber-white hover:text-cyber-red transition-colors">
                    Muthuraja S
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-4">
                    <a href="/" class="nav-link <%= currentPath === '/' ? 'active' : '' %>" data-section="home">Home</a>
                    <a href="/about" class="nav-link <%= currentPath === '/about' ? 'active' : '' %>" data-section="about">About</a>
                    <a href="/resume" class="nav-link <%= currentPath === '/resume' ? 'active' : '' %>" data-section="resume">Resume</a>
                    <a href="/projects" class="nav-link <%= currentPath === '/projects' ? 'active' : '' %>" data-section="projects">Projects</a>
                    <a href="/timeline" class="nav-link <%= currentPath === '/timeline' ? 'active' : '' %>" data-section="timeline">Timeline</a>
                    <a href="/contact" class="nav-link <%= currentPath === '/contact' ? 'active' : '' %>" data-section="contact">Contact</a>
                </div>
            </div>

            <!-- Theme Toggle & Mobile Menu -->
            <div class="flex items-center space-x-4">
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-cyber-text hover:text-cyber-red hover:bg-cyber-gray focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cyber-red transition-all duration-200">
                        <span class="sr-only">Open main menu</span>
                        <i id="menu-icon" class="fas fa-bars text-lg"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="md:hidden hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-cyber-dark border-t border-cyber-red">
                <a href="/" class="mobile-nav-link <%= currentPath === '/' ? 'active' : '' %>" data-section="home">
                    <i class="fas fa-home mr-2"></i>Home
                </a>
                <a href="/about" class="mobile-nav-link <%= currentPath === '/about' ? 'active' : '' %>" data-section="about">
                    <i class="fas fa-user mr-2"></i>About
                </a>
                <a href="/resume" class="mobile-nav-link <%= currentPath === '/resume' ? 'active' : '' %>" data-section="resume">
                    <i class="fas fa-file-alt mr-2"></i>Resume
                </a>
                <a href="/projects" class="mobile-nav-link <%= currentPath === '/projects' ? 'active' : '' %>" data-section="projects">
                    <i class="fas fa-code mr-2"></i>Projects
                </a>
                <a href="/timeline" class="mobile-nav-link <%= currentPath === '/timeline' ? 'active' : '' %>" data-section="timeline">
                    <i class="fas fa-history mr-2"></i>Timeline
                </a>
                <a href="/contact" class="mobile-nav-link <%= currentPath === '/contact' ? 'active' : '' %>" data-section="contact">
                    <i class="fas fa-envelope mr-2"></i>Contact
                </a>
            </div>
        </div>
    </nav>
</header>