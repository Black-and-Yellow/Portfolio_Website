<%- include('../partials/head') %>

<body class="bg-white dark:bg-gray-900 transition-colors duration-300">
    <%- include('../partials/header') %>

    <main class="pt-16">
        <!-- Timeline Header -->
        <section class="py-12 bg-gray-50 dark:bg-gray-800">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
                        My <span class="text-primary-600 dark:text-primary-400">Timeline</span>
                    </h1>
                    <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                        A chronological journey through my educational background, professional experience, and key achievements.
                    </p>
                </div>
            </div>
        </section>

        <!-- Timeline Content -->
        <section class="py-16">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="relative">
                    <!-- Timeline Line -->
                    <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gray-300 dark:bg-gray-600"></div>

                    <% if (timeline && timeline.length > 0) { %>
                        <div class="space-y-12">
                            <% timeline.forEach((item, index) => { %>
                                <div class="relative flex items-center <%= index % 2 === 0 ? 'justify-start' : 'justify-end' %>">
                                    <!-- Timeline Dot -->
                                    <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 
                                                <% if (item.category === 'education') { %>
                                                    bg-blue-500
                                                <% } else if (item.category === 'work') { %>
                                                    bg-green-500
                                                <% } else if (item.category === 'project') { %>
                                                    bg-purple-500
                                                <% } else { %>
                                                    bg-yellow-500
                                                <% } %>
                                                rounded-full border-4 border-white dark:border-gray-900 z-10"></div>

                                    <!-- Content Card -->
                                    <div class="<%= index % 2 === 0 ? 'mr-8 md:mr-16' : 'ml-8 md:ml-16' %> w-full md:w-5/12">
                                        <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300 animate-slide-up" 
                                             style="animation-delay: <%= index * 0.1 %>s">
                                            <!-- Category Badge -->
                                            <div class="inline-flex items-center px-2 py-1 mb-3 text-xs font-medium rounded-full
                                                        <% if (item.category === 'education') { %>
                                                            bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300
                                                        <% } else if (item.category === 'work') { %>
                                                            bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300
                                                        <% } else if (item.category === 'project') { %>
                                                            bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300
                                                        <% } else { %>
                                                            bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300
                                                        <% } %>">
                                                <i class="fas 
                                                         <% if (item.category === 'education') { %>
                                                             fa-graduation-cap
                                                         <% } else if (item.category === 'work') { %>
                                                             fa-briefcase
                                                         <% } else if (item.category === 'project') { %>
                                                             fa-code
                                                         <% } else { %>
                                                             fa-trophy
                                                         <% } %>
                                                         mr-1"></i>
                                                <%= item.category.charAt(0).toUpperCase() + item.category.slice(1) %>
                                            </div>

                                            <!-- Date -->
                                            <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                                                <%= new Date(item.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                                                <% if (item.endDate && !item.current) { %>
                                                    - <%= new Date(item.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                                                <% } else if (item.current) { %>
                                                    - Present
                                                <% } %>
                                            </div>

                                            <!-- Title -->
                                            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                                                <%= item.title %>
                                            </h3>

                                            <!-- Organization -->
                                            <p class="text-primary-600 dark:text-primary-400 font-medium mb-3">
                                                <%= item.company %>
                                                <% if (item.location) { %>
                                                    <span class="text-gray-500 dark:text-gray-400"> â€¢ <%= item.location %></span>
                                                <% } %>
                                            </p>

                                            <!-- Description -->
                                            <p class="text-gray-600 dark:text-gray-300 mb-4">
                                                <%= item.description %>
                                            </p>

                                            <!-- Skills -->
                                            <% if (item.skills && item.skills.length > 0) { %>
                                                <div class="flex flex-wrap gap-2">
                                                    <% item.skills.forEach(skill => { %>
                                                        <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                                                            <%= skill %>
                                                        </span>
                                                    <% }) %>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <!-- No Timeline Items -->
                        <div class="text-center py-12">
                            <div class="text-gray-500 dark:text-gray-400">
                                <i class="fas fa-clock text-6xl mb-4"></i>
                                <h3 class="text-xl font-semibold mb-2">No Timeline Items</h3>
                                <p>Timeline items will appear here when available.</p>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>