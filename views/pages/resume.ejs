<%- include('../partials/head') %>

<body class="bg-white dark:bg-gray-900 transition-colors duration-300">
    <%- include('../partials/header') %>

    <main class="pt-16">
        <!-- Resume Header -->
        <section class="py-12 bg-gray-50 dark:bg-gray-800">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
                        My <span class="text-primary-600 dark:text-primary-400">Resume</span>
                    </h1>
                    <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
                        Download or view my complete professional background
                    </p>
                    
                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="#resume-content" 
                           class="bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 hover:-translate-y-1">
                            <i class="fas fa-eye mr-2"></i>
                            View Full Resume
                        </a>
                        <a href="https://drive.google.com/file/d/1stkt2Hm7Fjfs6ch2Pgz6RcCIrwbfr21A/view?usp=sharing" target="_blank"
                           class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white dark:border-primary-400 dark:text-primary-400 dark:hover:bg-primary-400 dark:hover:text-gray-900 font-semibold py-3 px-6 rounded-lg transition-all duration-300 hover:-translate-y-1">
                            <i class="fas fa-download mr-2"></i>
                            Download PDF
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Resume Content -->
        <section id="resume-content" class="py-16">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Personal Info -->
                <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-8 mb-8">
                    <div class="text-center mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                            <%= resume.personalInfo.name %>
                        </h2>
                        <p class="text-xl text-primary-600 dark:text-primary-400 mb-4">
                            <%= resume.personalInfo.title %>
                        </p>
                        
                        <div class="flex flex-wrap justify-center gap-6 text-gray-600 dark:text-gray-300">
                            <div class="flex items-center">
                                <i class="fas fa-envelope mr-2"></i>
                                <a href="mailto:<%= resume.personalInfo.email %>" class="hover:text-primary-600 dark:hover:text-primary-400">
                                    <%= resume.personalInfo.email %>
                                </a>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-phone mr-2"></i>
                                <%= resume.personalInfo.phone %>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-map-marker-alt mr-2"></i>
                                <%= resume.personalInfo.location %>
                            </div>
                        </div>
                    </div>
                    
                    <p class="text-gray-600 dark:text-gray-300 text-center max-w-3xl mx-auto leading-relaxed">
                        <%= resume.personalInfo.summary %>
                    </p>
                </div>

                <!-- Skills -->
                <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-8 mb-8">
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Skills</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <!-- Technical Skills -->
                        <div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Technical Skills</h4>
                            <div class="flex flex-wrap gap-2">
                                <% resume.skills.technical.forEach(skill => { %>
                                    <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 text-sm rounded-full">
                                        <%= skill %>
                                    </span>
                                <% }) %>
                            </div>
                        </div>
                        
                        <!-- Tools -->
                        <div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Tools & Technologies</h4>
                            <div class="flex flex-wrap gap-2">
                                <% resume.skills.tools.forEach(tool => { %>
                                    <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 text-sm rounded-full">
                                        <%= tool %>
                                    </span>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Languages -->
                    <div class="mt-8">
                        <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Languages</h4>
                        <div class="flex flex-wrap gap-4">
                            <% resume.skills.languages.forEach(language => { %>
                                <div class="flex items-center space-x-2">
                                    <span class="font-medium text-gray-900 dark:text-white"><%= language.name %></span>
                                    <span class="text-sm text-gray-500 dark:text-gray-400">(<%= language.level %>)</span>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <!-- Experience -->
                <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-8 mb-8">
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Professional Experience</h3>
                    
                    <div class="space-y-8">
                        <% resume.experience.forEach(job => { %>
                            <div class="border-l-4 border-primary-500 pl-6">
                                <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-2">
                                    <div>
                                        <h4 class="text-xl font-semibold text-gray-900 dark:text-white">
                                            <%= job.title %>
                                        </h4>
                                        <p class="text-primary-600 dark:text-primary-400 font-medium">
                                            <%= job.company %>
                                        </p>
                                        <% if (job.location) { %>
                                            <p class="text-gray-500 dark:text-gray-400 text-sm">
                                                <%= job.location %>
                                            </p>
                                        <% } %>
                                    </div>
                                    <div class="text-gray-500 dark:text-gray-400 text-sm mt-2 md:mt-0">
                                        <%= new Date(job.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %> - 
                                        <%= job.current ? 'Present' : new Date(job.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                                    </div>
                                </div>
                                
                                <ul class="list-disc list-inside space-y-1 text-gray-600 dark:text-gray-300 mb-4">
                                    <% job.description.forEach(desc => { %>
                                        <li><%= desc %></li>
                                    <% }) %>
                                </ul>
                                
                                <% if (job.achievements && job.achievements.length > 0) { %>
                                    <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                                        <h5 class="font-semibold text-gray-900 dark:text-white mb-2">Key Achievements:</h5>
                                        <ul class="list-disc list-inside space-y-1 text-gray-600 dark:text-gray-300">
                                            <% job.achievements.forEach(achievement => { %>
                                                <li><%= achievement %></li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <!-- Education -->
                <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-8 mb-8">
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Education</h3>
                    
                    <div class="space-y-6">
                        <% resume.education.forEach(edu => { %>
                            <div class="border-l-4 border-green-500 pl-6">
                                <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-2">
                                    <div>
                                        <h4 class="text-xl font-semibold text-gray-900 dark:text-white">
                                            <%= edu.degree %>
                                        </h4>
                                        <p class="text-green-600 dark:text-green-400 font-medium">
                                            <%= edu.institution %>
                                        </p>
                                        <% if (edu.location) { %>
                                            <p class="text-gray-500 dark:text-gray-400 text-sm">
                                                <%= edu.location %>
                                            </p>
                                        <% } %>
                                    </div>
                                    <div class="text-gray-500 dark:text-gray-400 text-sm mt-2 md:mt-0">
                                        <%= new Date(edu.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %> - 
                                        <%= new Date(edu.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                                    </div>
                                </div>
                                
                                <% if (edu.gpa) { %>
                                    <p class="text-gray-600 dark:text-gray-300">
                                        <span class="font-medium">GPA:</span> <%= edu.gpa %>
                                    </p>
                                <% } %>
                                
                                <% if (edu.honors && edu.honors.length > 0) { %>
                                    <div class="mt-2">
                                        <span class="font-medium text-gray-900 dark:text-white">Honors:</span>
                                        <span class="text-gray-600 dark:text-gray-300">
                                            <%= edu.honors.join(', ') %>
                                        </span>
                                    </div>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <!-- Certifications -->
                <% if (resume.certifications && resume.certifications.length > 0) { %>
                    <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-8">
                        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Certifications</h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <% resume.certifications.forEach(cert => { %>
                                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
                                    <h4 class="font-semibold text-gray-900 dark:text-white">
                                        <%= cert.name %>
                                    </h4>
                                    <p class="text-primary-600 dark:text-primary-400 font-medium">
                                        <%= cert.issuer %>
                                    </p>
                                    <p class="text-gray-500 dark:text-gray-400 text-sm">
                                        Issued: <%= new Date(cert.date).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                                    </p>
                                    <% if (cert.url) { %>
                                        <a href="<%= cert.url %>" target="_blank" rel="noopener noreferrer"
                                           class="text-primary-600 dark:text-primary-400 hover:underline text-sm">
                                            View Certificate
                                        </a>
                                    <% } %>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>